<Window x:Class="Section17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Section17"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="525">
    <Grid Margin="0,0,0,27">

        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top"/>
        <ListBox Name="listZoos" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,53,411,128" SelectionChanged="listZoos_SelectionChanged"/>
        <Button Content="Delete Zoo" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="104" Click="DeleteZoo_Click">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
        </Button>
        <Button Content="Add Zoo" HorizontalAlignment="Left" Margin="10,372,0,0" VerticalAlignment="Top" Width="104" Click="AddZoo_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Update Zoo" HorizontalAlignment="Left" Margin="10,397,0,0" VerticalAlignment="Top" Width="104" Click="UpdateZoo_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>


        <Label Content="Associated Animals List" HorizontalAlignment="Left" Margin="135,19,0,0" VerticalAlignment="Top" Width="181"/>
        <ListBox x:Name="listAssociatedAnimals" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="135,53,209,128"/>
        <Button Content="Delete Animal" HorizontalAlignment="Left" Margin="135,310,0,0" VerticalAlignment="Top" Width="181" Click="RemoveAnimal_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Add Animal" HorizontalAlignment="Left" Margin="135,372,0,0" VerticalAlignment="Top" Width="181" Click="AddAnimal_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Update Animal" HorizontalAlignment="Left" Margin="135,397,0,0" VerticalAlignment="Top" Width="181" Click="UpdateAnimal_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <ListBox x:Name="listAllAnimals" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="334,53,10,45" SelectionChanged="listAllAnimals_SelectionChanged"/>
        <Button Content="Add Animal to Zoo" HorizontalAlignment="Left" Margin="334,16,0,0" VerticalAlignment="Top" Width="181" Height="32" Click="AddAnimaltoZoo_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Delete Animal" HorizontalAlignment="Left" Margin="334,397,0,0" VerticalAlignment="Top" Width="181" Click="DeleteAnimal_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>


        <TextBox Name="myTextBox" HorizontalAlignment="Left" Margin="10,335,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="306" Height="32"/>




    </Grid>
</Window>
